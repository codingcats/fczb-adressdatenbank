<div class="center container">
<div class="center jumbotron">

<h1>Liste aller Institutionen</h1>
<p>&nbsp;</p>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Name &nbsp;</th>
      <th>Straße &nbsp;</th>
      <th>Plz &nbsp;</th>
      <th>Ort &nbsp;</th>
      <th>Webseite &nbsp;</th>
      <th>Kommentar &nbsp;</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td><%= institution.street %></td>
        <td><%= institution.postcode %></td>
        <td><%= institution.city %></td>
        <td><%= institution.website %></td>
        <td><%= institution.comment %></td>
        <td><%= link_to "", institution, :class=>'glyphicon glyphicon-eye-open btn btn-default btn-xs' %></td>
        <td><%= link_to "", edit_institution_path(institution), :class=>'glyphicon glyphicon-pencil btn btn-default btn-xs' %></td>
        <td><%= link_to "", institution, method: :delete, data: { confirm: 'Möchten Sie die Institution wirklich löschen?' }, :class=>'glyphicon glyphicon-trash btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Neue Institution anlegen".html_safe, new_institution_path, :id=>"open-contacts-dialog-btn", :class=>"btn btn-default btn-lg" %>
</div>
</div>
</div>