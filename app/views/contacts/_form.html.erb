  <div class="field">
    <%= f.label :Festnetz %><br>
    <%= f.text_field :landline %>
  </div>
  <div class="field">
    <%= f.label :Mobil %><br>
    <%= f.text_field :mobile %>
  </div>
  <div class="field">
    <%= f.label :Fax %><br>
    <%= f.text_field :fax %>
  </div>

  <div class="field">
    <%= f.label :Institution %><br>
    <%= f.fields_for :institutions do |builder| %>
    <%= builder.collection_select(:institution_id, Institution.all, :id, :name) %>
