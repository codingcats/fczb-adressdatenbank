      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
  </div>
  <div class="field">
    <%= f.label :Nachname %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :Vorname %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :Anrede %><br>
    <%= f.text_field :form_of_address %>
  </div>
  <div class="field">
    <%= f.label :Position%><br>
    <%= f.text_field :position %>
  </div>

  <div class="field email-container">
    <table>
      <thead>
        <th><%= f.label :Email %></th>
        <th>LÃ¶schen</th>
      </thead>
      <tbody>
        <%= f.fields_for :emails do |builder| %>
          <tr>
            <td><%= builder.text_field :value %></td>
            <td><%= builder.check_box '_destroy' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
