<div class="center jumbotron">

  <h1>Liste aller Anl&auml;sse</h1>

<p>&nbsp;<p>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Bezeichnung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occasions.each do |occasion| %>
      <tr>
        <td><%= occasion.name %></td>
        <td><%= link_to 'Anzeigen', occasion %></td>
        <td><%= link_to 'Bearbeiten', edit_occasion_path(occasion) %></td>
        <td><%= link_to 'Löschen', occasion, method: :delete, data: { confirm: 'Wollen Sie den Kontaktanlass wirklich löschen?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Neuen Anlass anlegen".html_safe, new_occasion_path, :id=>"open-contacts-dialog-btn", :class=>"btn btn-default btn-lg" %>
</div>